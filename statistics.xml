<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="446dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="57dp">

        <Spinner
            android:id="@+id/StatSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>


        <TextView
            android:id="@+id/mpg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miles Per Gallon:"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/mpg_changing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/text_space"
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <TextView
            android:id="@+id/gasPrice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gas Price, Per Mile ($):"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/gasPrice_changing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/statistics_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="continueOnClick"
            android:text="Continue" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>